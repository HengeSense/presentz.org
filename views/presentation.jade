#container
  #main
    .container
      .header
        a(href="/#{catalog.id}")
          img(src="/assets/images/logo_icon.png")
        if catalog.website && catalog.logo
          | 
          a(href=catalog.website)
            img(src=catalog.logo)
        | 
        a(href="/#{catalog.id}")
          span#logonormal=title
      .presentation
        #videoContainer.slide
        #slideContainer.slide
        .floatCloser
      .controls
        #agendaContainer
      .footer

script(src="/assets/javascripts/jquery.min.js")      
script(src="/assets/javascripts/froogaloop.js")      
script(src="/assets/javascripts/swfobject.js")      
script(src="/assets/javascripts/mediaelement-and-player.js")      
script(src="/assets/javascripts/Presentz.js")
script
  presentz = new Presentz("videoContainer", "slideContainer", "agendaContainer");
  function initPresentz(presentation) {
    presentz.init(presentation);
    presentz.changeChapter(0, 0, true);
  }
script(src="#{url}?jsoncallback=initPresentz")

